<div class="mt-4">
  <h3>Tạo khóa học</h3>

  <form class="mt-4" method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="form-group">
      <label for="description">Mô tả khóa học</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      ></textarea>
    </div>
    <div class="form-group">
      <label for="time">Thời gian đào tạo</label>
      <input type="text" class="form-control" id="time" name="time" />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input type="text" class="form-control" id="level" name="level" />
    </div>
    <div class="form-group">
      <label for="videoId">Video Id</label>
      <input type="text" class="form-control" id="videoId" name="videoId" />
    </div>
    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </form>
</div>